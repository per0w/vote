{
  "roots": [
    "<rootDir>"
  ],
  "transform": {
    "^.+\\.[jt]sx?$": "babel-jest"
  },

  "moduleDirectories": ["node_modules", "src"],
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.[jt]sx?$",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ]
}